    "compilerOptions": {
        "outDir": "public",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6", "dom"
        ],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "./src",
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}